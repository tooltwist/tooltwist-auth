<% layout(layoutPath) -%>
<%
	if (!details)
		var details = {};
%>	
	
	<!-- +++++ Contact Section +++++ -->
	<div class="container pt">
		<div class="row mt">

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin: 0 auto;text-align:center;">
				<img id="logo-image" src="img/useme_logo-570.png" alt="UseMe.tv">
			</div>
			
			<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 centered">
				<h3>CONTACT ME</h3>
				<hr>
				<p>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
			</div>
		</div>
		<div class="row mt">	
			<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
				<form role="form" method="post" action="/contact">
				  <div class="form-group">
				    <input type="name" class="form-control" name="name" placeholder="Your Name" value="<%=details.name || ''%>">
				    <br>
				  </div>
				  <div class="form-group">
				    <input type="email" class="form-control" name="email" placeholder="Enter email" value="<%=details.email || ''%>">
				    <br>
				  </div>
				  <div class="form-group">
				    <input type="text" class="form-control" name="subject" placeholder="Subject" value="<%=details.subject || ''%>">
				    <br>
				  </div>
				  <textarea class="form-control" rows="6" name="text" placeholder="Enter your text here" value="<%=details.text || ''%>"></textarea>
				    <br>
				  <button type="submit" class="btn btn-success">SUBMIT</button>
				</form>    			
			</div>
		</div><!-- /row -->
	</div><!-- /container -->
